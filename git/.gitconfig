[user]
	name = orhun
	email = orhun@archlinux.org
	signingkey = 165E0FF7C48C226E1EC363A7F83424824B3E4B90
[gpg]
	program = gpg
[url "ssh://git@github.com/"]
  insteadOf = https://github.com/
[url "ssh://git@gitlab.com/"]
  insteadOf = https://gitlab.com/
#[url "ssh://git@bitbucket.org/"]
#  insteadOf = https://bitbucket.org/
[alias]
	c = clone
	i = init
	a = add
	m = mv
	r = restore
	rm = rm
	b = bisect
	d = diff
	g = grep
	s = show
	st = status
	br = branch
	cm = commit
	mr = merge
	rb = rebase
	rs = reset
	t = tag
	f = fetch
	p = pull
	aa = add -A
	cmt = commit -m
	rmt = remote -v
	rr = rm -r
	l = log
	lo = log --graph --decorate --all
	ll = log --graph --decorate --oneline --all
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	ls = ls-files
	crds = config credential.helper store
	yolo = !git commit -m \"$(curl -s whatthecommit.com/index.txt)\"
	godsays = !git commit -m \"$(curl -s https://godsays.xyz)\"
[commit]
	template = ~/.git-commit-template
	gpgsign = true
	verbose = true
[core]
	editor = vim
[init]
	defaultBranch = master
